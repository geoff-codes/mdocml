#if defined(__linux__) || defined(__MINT__)
#define _GNU_SOURCE /* vasprintf() */
#endif

#include <stdarg.h>
#include <stdio.h>
#include <string.h>

int
testfunc(char **ret, const char *format, ...)
{
	va_list	 ap;
	int	 irc;

	va_start(ap, format);
	irc = vasprintf(ret, format, ap);
	va_end(ap);

	return irc;
}

int
main(void)
{
	char	*ret;

	if (testfunc(&ret, "%s.", "Text") != 5)
		return 1;
	if (strcmp(ret, "Text."))
		return 2;
	return 0;
}
@


